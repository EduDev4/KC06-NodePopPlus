<% include _header %>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header"><a href="/" class="navbar-brand">Nodeapi</a></div>
  </div>
</div>


<div class="container">
  <%= __("Select Language") %> : 
  <% getLocales().forEach((locale, index, array) => { %>
    <a href="/change-locale/<%= locale %>"><%= locale %></a> <% if (index !== (array.length -1)) { %> | <% } else { %> <br><br> <% } %>
  <% }) %>
  
  <div class="row">
    <div class="col-md-12">
      <h1><%= __("Advertisements List") %></h1>
      <p class="lead"><%= __("List") %>: <%= anuncios.length %> <%= __("of") %> <%= total %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead><tr>
          <th><%= __("Name") %></th>
          <th><%= __("Sell") %></th>
          <th style="text-align: right"><%= __("Price") %></th>
          <th><%= __("Photo") %></th>
          <th><%= __("Tags") %></th>
          <th>#</th>
        </tr></thead>
        <tbody>
<% anuncios.forEach(anuncio => { %>
          <tr>
            <td><%= anuncio.nombre %></td>
            <td><%= anuncio.venta ? __("Yes") : __("No") %></td>
            <td style="text-align: right"><%= anuncio.precio / 100 %>â‚¬</td>
            <td><img src="<%= anuncio.foto %>"></td>
            <td><%= anuncio.tags %></td>
            <td><%= anuncio._id %></td>
          </tr>
<% }) %>
        </tbody>
      </table>

      <p><%= __("Examples") %>:</p>

      <ul>
        <li><a href="?"><%= __("All") %> (max. 1000)</a></li>
        <li><a href="?start=2&limit=2"><%= __("Pagination") %></a></li>
        <li><a href="?sort=precio"><%= __("Sort by price (highest yo lowest)") %></a></li>
        <li><a href="?sort=-precio"><%= __("Sort by price (lowest to highest)") %></a></li>
        <li><a href="?tag=mobile"><%= __("With tag mobile") %></a></li>
      </ul>

    </div>
  </div>

  <a href="/"><%= __("Back to home") %></a>

</div>
<% include _footer %>
